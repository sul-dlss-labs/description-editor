<%= form_with model: @title_form, url: @url, method: @method do |title_form| %>
  <%= title_form.fields_for @title_form.prop_hash do |form| %>
    <% if @title_form.prop_hash.value %>
      <%= form.label :value, "Value:" %>
      <%= form.text_field :value %>
    <% end %>
    <% if @title_form.prop_hash.structured_values.present? %>
      STRUCTURED
    <% end %>
    <%= form.check_box :primary_status %>
    <%= form.label :primary_status, "Primary" %>
    <%= form.submit "Save" %>
  <% end %>
<% end %>
<%= button_to "Cancel", "#{@url}", method: :get, class: "btn btn-outline-primary btn-sm" %>
