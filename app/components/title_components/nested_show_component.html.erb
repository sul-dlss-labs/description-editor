<% if title.type.present? %>
  <dl class="row mb-0">
    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10"><%= title.type %></dd>
  </dl>
<% end %>
<% if title.language_code.present? %>
  <dl class="row mb-0">
    <dt class="col-sm-2">Language</dt>
    <dd class="col-sm-10"><%= language_name %></dd>
  </dl>
<% end %>
<% if title.script_code.present? %>
  <dl class="row mb-0">
    <dt class="col-sm-2">Script</dt>
    <dd class="col-sm-10"><%= script_name %></dd>
  </dl>
<% end %>
<% if title.value.present? %>
  <dl class="row mb-0">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10"><%= title.value %></dd>
  </dl>
<% end %>
<% if title.structured_values.present? %>
  <dl class="row mb-0">
    <% title.structured_values.each do |structured_value| %>
      <dt class="col-sm-2"><%= structured_value.type.titlecase %></dt>
      <dd class="col-sm-10"><%= structured_value.value %></dd>
    <% end %>
  </dl>
<% end %>
